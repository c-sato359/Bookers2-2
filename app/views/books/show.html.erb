
<div class = "container">
<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-xs-3">
    <div class = "col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/error', model: @book %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class = "col-xs-9">
    <div class = "col-md-8 offset-md-0">
      <h1>Book detail</h1>
      <table class = "table table-user-show">
      <table class = "table">
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(30,30), fallback: "no-image_tag.jpg" %></td>
            <td><%= link_to @user.name, user_path(@user) %></td>
            <td><%= image_tag @user.get_profile_image(30,30), fallback: "no-image_tag.jpg" %><br>
            <%= link_to @user.name, user_path(@user) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>