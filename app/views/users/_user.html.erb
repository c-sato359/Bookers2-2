<table class="table table-user">
	<h2>User info</h2>
	<thead>
		<%= image_tag user.get_profile_image(100,100) %>
	</thead>
	<tbody>
		<tr>
			<th>name</th>
		<td><%= user.name %></td>
		</tr>
		<tr>
			<th>Introductionn</th>
			<%= user.introduction %>
		</tr>
		<tr>
			<th colspan="2">
				<%= link_to edit_user_path(current_user), class:"btn btn-default btn-block" do %>
				<span class="fas fa-user-cog"></span>
				<% end %>
			</th>
		</tr>
	</tbody>
</table>