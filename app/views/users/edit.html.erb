<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-1 mx-auto">
  <% if @user.errors.any? %>
 <div class="error">
 	<h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
 	<ul>
 		<% @user.errors.full_messages.each do |message| %>
 	 <li><%= message %></li>
 		<% end %>
 	</ul>
 </div>
  <% end %>
   <%= form_with model: @user, local:true do |f| %>
    <div class="user-name">Name</div>
    <%= f.text_field :name %>
    <div class="user-edit-image">Image</div>
    <%= f.file_field :profile_image, accept: "image/*" %>
    <div class="form_body">Introduction</div>
    <%= f.text_area :introduction %><br>
    <div class="upload"></div>
    <%= f.submit "Update User" %>
   <% end %>
   </div>
  </div>
 </div>
</div>