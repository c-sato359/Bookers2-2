<div class = "container px-5 px-sm-0">
  <div class = "right">
    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <h1>Users info</h1>
   <%= form_with model: @book do |f| %>
   <div>
        <label>Title</label>
        <div class="field"><%= f.text_field :title %></div>
    </div>
    <div>
        <label>Body</label>
        <div class="field"><%= f.text_area :body %></div>
    </div>
     <div class="actions">
    <%= f.submit 'Create Book', class: "btn btn-success mb-3" %>
    <% end %>
    </div>
</div>