<%= link_to "editing", edit_user_path(@user), class: "button is-warning is-light" %>
<div class="container">

	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= image_tag @user.get_profile_image(100,100) %>
			<h4>name<%= @user.name %></h4>
      <%= @user.introduction %>
			<h2>New book</h2>
		</div>
    <div class = 'box'>
		   <%= form_with model: @book do |f| %>
        <label>Title</label>
        <div class="field"><%= f.text_field :title %></div>
        <label>Opinion</label>
        <div class="field"><%= f.text_area :body %></div>
    </div>
      <div class="actions">
      <%= f.submit "Create Book", class: "btn btn-success mb-3" %>
      </div>
		  <% end %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
            <th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
					<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>