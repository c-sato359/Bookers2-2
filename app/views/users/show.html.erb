<div class="container">
 <div class="row">
  <div class="col-lg-3">
  	<%= render 'users/user', user: @user %>
  	<h2>New book</h2>
  	<%= render 'books/book', book: @book %>
  </div>
  <div class="col-xs-3">
  	 <table class="table book-index">
          <h1>Books</h1>
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
    </table>
  	<table class="table table-user-show">
  		<% @books.each do |book| %>
  		<tr>
  			<td><%= link_to user_path(@user) do %>
  			<%= image_tag @user.get_profile_image(100,100), fallback: "no_image.jpg"%>
  			<% end %></td>
  			<td><%= link_to book.title, book_path(book.id) %></td>
  			<td><%= book.body %></td>
  		</tr>
  		<% end %>
  	</table>
   </div
  </div>
</div>